#!/bin/bash

echo "Backing up /etc/apt/sources.list to /etc/apt/sources.list.bak"
sudo cp /etc/apt/sources.list /etc/apt/sources.list.bak

echo "Adding debian jessie packages to /etc/apt/sources.list"
sudo bash -c 'cat add_source.txt >> /etc/apt/sources.list'

echo "Updating and installing"
sudo apt-get update --allow-unauthenticated && sudo apt-get install gcc-4.8 g++4.8 --allow-unauthenticated

echo "Testing"
/usr/bin/gcc-4.8 --version
/usr/bin/g++-4.8 --version
